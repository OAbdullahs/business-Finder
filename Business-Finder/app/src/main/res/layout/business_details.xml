<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.abdullahalomair.businessfinder.viewmodels.BusinessDetailViewModel" />
    </data>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/business_materialCardView"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/business_image_detail"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:load_image = "@{viewModel.imageDrawable}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:background="@color/transparent_black"
                    app:layout_constraintBottom_toBottomOf="@+id/business_image_detail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/business_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:text="@{viewModel.businessTitle}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view4"
                    tools:text="My business" />

                <RatingBar
                    android:id="@+id/business_ratings"
                    style="?attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:numStars="5"
                    android:rating="@{viewModel.businessRatings}"
                    android:progressTint="@color/gold"
                    android:secondaryProgressTint="@color/gold"
                    app:layout_constraintStart_toStartOf="@+id/business_title"
                    app:layout_constraintTop_toBottomOf="@+id/business_title" />

                <TextView
                    android:id="@+id/business_alias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="@{viewModel.businessAlias}"
                    app:layout_constraintStart_toStartOf="@+id/business_ratings"
                    app:layout_constraintTop_toBottomOf="@+id/business_ratings"
                    tools:text="Restaurant" />

                <TextView
                    android:id="@+id/is_business_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@{viewModel.isBusinessOpen}"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/business_alias"
                    app:layout_constraintTop_toBottomOf="@+id/business_alias"
                    app:layout_constraintVertical_bias="0.0"
                    tools:text="Open" />

                <TextView
                    android:id="@+id/price_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@{viewModel.priceTag}"
                    app:layout_constraintStart_toEndOf="@+id/is_business_open"
                    app:layout_constraintTop_toTopOf="@+id/is_business_open"
                    tools:text=" . $$" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/time_detail"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    app:lottie_rawRes="@raw/time_animation"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                     />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginBottom="10dp"
            android:id="@+id/weather_materialCardView"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/business_materialCardView">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/weather_shimmer_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/weather_city_name"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@{viewModel.textViewBackgroundColor}"
                    android:fontFamily="@font/opensans_extrabolditalic"
                    android:gravity="center"
                    android:text="@{viewModel.businessCityName}"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="California" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="2dp"
                    android:background="@{viewModel.textViewBackgroundColor}"
                    android:fontFamily="@font/opensans_light"
                    android:gravity="center"
                    android:text="@{viewModel.businessCountyName}"
                    app:layout_constraintEnd_toEndOf="@+id/weather_city_name"
                    app:layout_constraintStart_toStartOf="@+id/weather_city_name"
                    app:layout_constraintTop_toBottomOf="@+id/weather_city_name"
                    tools:text="USA" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animated_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@{viewModel.currentWeatherIcon}" />

                    <View
                        android:id="@+id/view6"
                        android:layout_width="2dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="2dp"
                        android:background="?default_color"
                        app:layout_constraintBottom_toBottomOf="@+id/animated_image"
                        app:layout_constraintStart_toEndOf="@+id/animated_image"
                        app:layout_constraintTop_toTopOf="@+id/animated_image" />

                    <TextView
                        android:id="@+id/materialTextView"
                        android:layout_width="wrap_content"
                        android:minWidth="20dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="2dp"
                        android:gravity="center"
                        android:background="@{viewModel.textViewBackgroundColor}"
                        android:text="@{viewModel.currentWeather}"
                        android:textSize="45sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/animated_image"
                        app:layout_constraintStart_toEndOf="@+id/view6"
                        app:layout_constraintTop_toTopOf="@+id/animated_image"
                        app:layout_constraintVertical_bias="0.0"
                        tools:text="22" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/today_text"
                        android:background="@{viewModel.textViewBackgroundColor}"
                        app:layout_constraintBottom_toBottomOf="@+id/materialTextView"
                        app:layout_constraintStart_toEndOf="@+id/materialTextView"
                        app:layout_constraintTop_toTopOf="@+id/materialTextView"
                        app:layout_constraintVertical_bias="0.56" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="2dp"
                        android:background="@{viewModel.textViewBackgroundColor}"
                        android:text="@{viewModel.averageWeather}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/materialTextView"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        tools:text="average" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/general_weather_recyclerview"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>

                </LinearLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginBottom="10dp"
            android:id="@+id/google_map_materialCardView"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather_materialCardView">

            <com.google.android.gms.maps.MapView
                android:id="@+id/google_map_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginBottom="10dp"
            android:id="@+id/saving_materialCardView"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/google_map_materialCardView">

          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <TextView
                  android:id="@+id/textView8"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="2dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginEnd="5dp"
                  android:text="@string/add_to_calender"
                  android:textSize="18sp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="1.0"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent">

              </TextView>

              <View
                  android:id="@+id/view3"
                  android:layout_width="0dp"
                  android:layout_height="2dp"
                  android:layout_marginStart="3dp"
                  android:layout_marginEnd="3dp"
                  android:background="@color/dark_gray"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/textView8" />

              <EditText
                  android:id="@+id/plan_title_editTex"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="10dp"
                  android:hint="@string/day_plan_name_hint"
                  app:layout_constraintEnd_toStartOf="@+id/color_picker"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/textView8" />

              <View
                  android:id="@+id/color_picker"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginEnd="10dp"
                  android:background="@drawable/rounded_shape"
                  android:backgroundTint="@{viewModel.randomColor}"
                  app:layout_constraintBottom_toBottomOf="@+id/plan_title_editTex"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/textView8" />

              <TextView
                  android:id="@+id/textView9"
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:gravity="center"
                  android:textSize="22sp"
                  android:text="@string/start"
                  app:layout_constraintStart_toStartOf="@+id/plan_title_editTex"
                  app:layout_constraintTop_toBottomOf="@+id/plan_title_editTex" />

              <TextView
                  android:id="@+id/start_plan_date"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textSize="22sp"
                  android:text="@{viewModel.startDate}"
                  app:layout_constraintEnd_toStartOf="@+id/color_picker"
                  app:layout_constraintTop_toTopOf="@+id/textView9"
                  tools:text="12 pm /2020" />


              <androidx.appcompat.widget.AppCompatButton
                  android:id="@+id/select_date"
                  android:layout_width="0dp"
                  android:layout_height="60dp"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="10dp"
                  android:layout_marginBottom="5dp"
                  android:background="@drawable/rounded_button"
                  android:text="@string/select_date"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  app:layout_constraintBottom_toTopOf="@+id/add_plan_button"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent" />

              <com.airbnb.lottie.LottieAnimationView
                  android:id="@+id/call_business"
                  android:layout_width="90dp"
                  android:layout_height="90dp"
                  android:layout_marginEnd="5dp"
                  android:layout_marginBottom="5dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:lottie_autoPlay="true"
                  app:lottie_loop="true"
                  app:lottie_rawRes="@raw/call_phone" />

              <com.airbnb.lottie.LottieAnimationView
                  android:id="@+id/add_plan_button"
                  android:layout_width="0dp"
                  android:layout_height="80dp"
                  android:layout_marginStart="5dp"
                  android:layout_marginEnd="5dp"
                  android:layout_marginBottom="5dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toStartOf="@+id/call_business"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/plan_title_editTex"
                  app:layout_constraintVertical_bias="1.0"
                  app:lottie_rawRes="@raw/adding_plan" />
          </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>